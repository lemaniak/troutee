<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="virtual-catalog-api-pu" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/troutee</jta-data-source>

        <mapping-file>META-INF/queries/user-finder-queries.xml</mapping-file>
        <!--<mapping-file>META-INF/queries/user-deleter-queries.xml</mapping-file>-->
        <!--<mapping-file>META-INF/queries/indie-user-finder-queries.xml</mapping-file>-->

        <class>com.troutee.domain.Client</class>
        <class>com.troutee.domain.ClientVisit</class>
        <class>com.troutee.domain.Device</class>
        <class>com.troutee.domain.DeviceDistance</class>
        <class>com.troutee.domain.DeviceTracking</class>
        <class>com.troutee.domain.DeviceTrackingCode</class>
        <class>com.troutee.domain.TrackHistory</class>
        <class>com.troutee.domain.Tuser</class>
        <!--<class>com.petzila.domain.IndieUser</class>-->

        <properties>
            <property name="hibernate.connection.datasource" value="java:/troutee" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect" />
            <property name="hibernate.show_sql" value="false" />
            <!--<property name="hibernate.format_sql" value="true"/>-->
            <!--<property name="hibernate.default_batch_fetch_size" value="60" />-->

            <!--<property name="hibernate.search.default.directory_provider" value="filesystem" />-->
            <!--<property name="hibernate.search.default.indexBase" value="/var/lucene/indexes" />-->
        </properties>
    </persistence-unit>
</persistence>